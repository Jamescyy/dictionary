<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/ee">

	<AutoCompleteTextView android:id="@+id/actvWord"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_marginTop="0dp" android:singleLine="true" />
	<Button android:id="@+id/btnSelectWord" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="本地查询" />

	<TextView
		android:id="@+id/mean"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:layout_weight="1"
		android:textSize="15sp"
		/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom"
		android:gravity="center"
		>

		<EditText
			android:id="@+id/in"
			android:layout_width="220dp"
			android:layout_height="wrap_content"
			/>


		<Button
			android:id="@+id/sure"
			android:layout_width="120dp"
			android:layout_height="wrap_content"
			android:text="网络查询"/>
	</LinearLayout>
</LinearLayout>